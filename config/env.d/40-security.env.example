###############################################
# Security / Policy Configuration (Example)   #
###############################################

# Secrets (generate strong random values in real env files)
JWT_SECRET=replace_with_long_random_64_plus_chars
# ENCRYPTION_KEY=base64:REPLACE_WITH_32_BYTE_KEY

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPER=1
PASSWORD_REQUIRE_NUMBER=1
PASSWORD_REQUIRE_SPECIAL=1
PASSWORD_MIN_STRENGTH_SCORE=75

# Argon2id Hash Cost (tune per hardware)
PASSWORD_ARGON_MEMORY=65536        # KiB (64MB)
PASSWORD_ARGON_TIME=4              # Iterations
PASSWORD_ARGON_THREADS=2

# Sessions / Tokens
SESSION_IDLE_TIMEOUT_MINUTES=30
SESSION_ABSOLUTE_TIMEOUT_HOURS=8
JWT_EXPIRY_MINUTES=60
REFRESH_TOKEN_EXPIRY_DAYS=30

# OTP / MFA
OTP_EXPIRY_SECONDS=300
OTP_MAX_ATTEMPTS=5
OTP_RESEND_COOLDOWN_SECONDS=60

# Rate Limiting
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_REQUESTS=120
LOGIN_RATE_LIMIT_MAX=10
LOGIN_RATE_LIMIT_WINDOW=300

# reCAPTCHA Policy (can override default scoring in security layer)
RECAPTCHA_MIN_SCORE=0.5
RECAPTCHA_ESCALATE_THRESHOLD=0.35
RECAPTCHA_HARD_BLOCK_THRESHOLD=0.2

# Account Locking
MAX_FAILED_LOGINS_BEFORE_LOCK=5
ACCOUNT_LOCK_DURATION_MINUTES=15

# Security Flags
FORCE_HTTPS=1
STRICT_TRANSPORT_SECURITY=1
CONTENT_SECURITY_POLICY_LEVEL=1
